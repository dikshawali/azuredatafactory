{
	"name": "tokenbasedrestapi",
	"properties": {
		"activities": [
			{
				"name": "login",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "http://restapi.adequateshop.com/api/authaccount/login",
					"method": "POST",
					"body": {
						"email": "dikshawali@gmail.com",
						"password": 123456
					}
				}
			},
			{
				"name": "fetching data",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "login",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "http://restapi.adequateshop.com/api/users?page=1",
					"method": "GET",
					"headers": {
						"Authorization": {
							"value": "Bearer @{activity('login').output.data.Token}",
							"type": "Expression"
						}
					}
				}
			}
		],
		"annotations": []
	}
}